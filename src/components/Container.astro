---
const { hideLines } = Astro.props;
---

<div class="mx-auto max-w-screen-xl px-5">
  <div class="relative container-grid">
    {
      !hideLines && (
        <div class="absolute inset-0 -z-10 pointer-events-none" aria-hidden="true">
          <div class="grid-line line-0 absolute left-0 h-full border-l border-black/[0.05] dark:border-white/[0.05] transition-all duration-300"></div>
          <div class="grid-line line-1 absolute left-[10%] h-full border-l border-black/[0.05] dark:border-white/[0.05] transition-all duration-300 hidden md:block"></div>
          <div class="grid-line line-2 absolute left-[20%] h-full border-l border-black/[0.05] dark:border-white/[0.05] transition-all duration-300"></div>
          <div class="grid-line line-3 absolute left-[30%] h-full border-l border-black/[0.05] dark:border-white/[0.05] transition-all duration-300 hidden md:block"></div>
          <div class="grid-line line-4 absolute left-[40%] h-full border-l border-black/[0.05] dark:border-white/[0.05] transition-all duration-300"></div>
          <div class="grid-line line-5 absolute left-[50%] h-full border-l border-black/[0.05] dark:border-white/[0.05] transition-all duration-300 hidden md:block"></div>
          <div class="grid-line line-6 absolute left-[60%] h-full border-l border-black/[0.05] dark:border-white/[0.05] transition-all duration-300"></div>
          <div class="grid-line line-7 absolute left-[70%] h-full border-l border-black/[0.05] dark:border-white/[0.05] transition-all duration-300 hidden md:block"></div>
          <div class="grid-line line-8 absolute left-[80%] h-full border-l border-black/[0.05] dark:border-white/[0.05] transition-all duration-300"></div>
          <div class="grid-line line-9 absolute left-[90%] h-full border-l border-black/[0.05] dark:border-white/[0.05] transition-all duration-300 hidden md:block"></div>
          <div class="grid-line line-10 absolute right-0 h-full border-r border-black/[0.05] dark:border-white/[0.05] transition-all duration-300"></div>
        </div>
      )
    }
    <slot />
  </div>
</div>
